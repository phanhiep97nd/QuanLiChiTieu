@using Microsoft.AspNetCore.Http.Extensions;
@{
    string FormattedAmount(int _amount)
    {
        //return string.Format("{0:C}", _amount);
        //return _amount.ToString();
        return _amount.ToString("N0");
    }
    bool isDetail()
    {
        string tab = ViewBag.lstSearchCondition[7];
        if (tab == "detail")
        {
            return true;
        }
        else
        {
            return false;
        }
    }
    string getTypeSpending(string type)
    {
        string result = "";
        switch (type)
        {
            case "1":
                result = "Nhà/Sinh hoạt phí";
                break;
            case "2":
                result = "Ăn uống";
                break;
            case "3":
                result = "Mua sắm";
                break;
            case "4":
                result = "Quỹ tài chính/Bảo hiểm";
                break;
            case "5":
                result = "Trả nợ vay";
                break;
            case "6":
                result = "Di chuyển";
                break;
            case "7":
                result = "Giải trí";
                break;
            case "8":
                result = "Giáo dục/Sức khỏe";
                break;
            case "9":
                result = "Khác";
                break;
        }
        return result;
    }
}
