
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" type="" href="~/style/Login.css">
</head>

<body>
    <div class="login-box">
        <form action="/Login/ClickLogin" method="post">
            <h1>Login</h1>
            <p style="color:red;">@ViewBag.SignInSuccess</p>
            @{
                if (Model != null)
                {
                    foreach (var Data in Model)
                    {
                        <p style="color:red;">@Data</p>
                    }
                }
            }
            <p id="message" style="color:red"></p>
            <div class="textbox">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="Tài Khoản" name="loginName" value=@ViewBag.LoginName>
            </div>

            <div class="textbox">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Mật Khẩu" name="pass">
            </div>

            <input type="submit" class="btn" value="Đăng Nhập">

        </form>
        <div class="signIn">
            <a href="/SignIn/SignIn">Đăng Ký Tài Khoản</a>
        </div>
    </div>
</body>

</html>
